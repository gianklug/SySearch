{
    "name": "SySearch",
    "description": "Search inside multiple MediaWiki instances",
    "version": "0.7.1",
    "manifest_version": 3,
    "permissions": ["declarativeNetRequest", "declarativeNetRequestFeedback"],
    "host_permissions": ["*://*/*"],
    "icons": {
        "48": "images/sysearch_48.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_icon": "images/sysearch_48.png"
    },
    "declarative_net_request": {
        "rule_resources": [{
            "id": "ruleset_1",
            "enabled": true,
            "path": "rules.json"
        }]
    }
}
